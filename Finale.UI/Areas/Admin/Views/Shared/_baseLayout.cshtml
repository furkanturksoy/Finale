<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        #container {
            width: 980px;
            height: auto;
            margin: auto;
        }

        #side-nav {
            background-color: #232f3e;
            height: 600px;
            width: 150px;
            float: left;
        }

            #side-nav ul {
                padding-left: 0 !important;
            }

            #side-nav li {
                list-style: none;
                margin-bottom: 15px;
                border-bottom: 1px solid white;
                padding-left: 35px;
            }

                #side-nav li a {
                    text-decoration: none;
                    color: white;
                    margin: auto;
                }

                    #side-nav li a:hover {
                        background-color: darkgray;
                    }

        #content {
            height: 598px;
            width: 828px;
            border-style: solid;
            border-color: black;
            border-width: 1px;
            float: left;
        }

        #clear {
            clear: both;
        }

        #inside-content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="side-nav">
            @Html.Partial("");
        </div>
        <div id="content">
            <div id="inside-content">
                @RenderBody()
            </div>
        </div>
        <div id="clear">

        </div>
    </div>
</body>
</html>
